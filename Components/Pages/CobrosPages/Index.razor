@page "/Cobro/Index"
@using AlmaMaria_AP1_1.Models
@using AlmaMaria_AP1_1.Services
@using System.Globalization
@inject CobroService cobroService
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>
<div class="container">
    <div class="shadow-lg">

        @*Header*@
        <div class="card-header">
            <h5><strong>Registro de Cobros</strong></h5>
        </div>

        @*Body*@
        <div class="card-body">
            <div class="row">
                @*Filtrar*@
                <div class="col-3">
                    <label class="form-lebel"><strong>Filtrar: </strong></label>
                </div>

                @*ValorFiltro*@
                <div class="col-3">
                    <label class="form-label"><strong>Buscar</strong></label>
                </div>

            </div>

            @*Botones e Inputs*@
            <div class="row">

                @*Filtro*@
                <div class="col-3 ">
                    <InputSelect class=" form-select" @bind-Value="Filtro">
                        <option value="" selected disabled>Elija una opci&oacute;n </option>
                        <option value="CobroId">CobroId</option>
                        <option value="Deudor">Deudor</option>
                    </InputSelect>
                </div>

                @*Buscar*@
                <div class="col-3">
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar" />
                        <button type="button" class=" btn btn-outline-primary bi bi-search" @onclick=Buscar></button>
                    </div>
                </div>
                @*Restablecer*@
                <div class="col-3">
                    <button type="button" class="btn btn-outline-secondary bi bi-arrow-clockwise" @onclick="Restablecer"></button>
                </div>

                @*Crear*@
                <div class="col-1">
                    <a href="/Cobro/Create" class="btn btn-primary">
                        <span class="bi bi-plus-square-fill-nav-menu mt-3"></span> Crear
                    </a>
                </div>


                @*Tabla*@
                <table class="table table-bordered mt-4 text-center">
                    <thead class="table table-striped">
                        <tr>
                            <th>CobroId</th>
                            <th>Deudor</th>
                            <th>Fecha</th>
                            <th>Monto</th>
                            <th>Ver</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var cobro in ListaCobros)
                        {
                            <tr>
                                <td>@cobro.CobroId</td>
                                <td>@cobro.Deudores?.Nombres</td>
                                <td>@cobro.Fecha</td>
                                <td>@cobro.Monto.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</td>

                                @*Observar*@
                                <td class="text-center">
                                    <a href="/Cobro/Details/@cobro.CobroId"><button type="button" class=" btn bi bi-eye"></button></a>
                                </td>

                                @*Editar*@
                                <td class="text-center">
                                    <a href="/Cobro/Edit/@cobro.CobroId"><button type="button" class="btn bi bi-pencil"></button></a>
                                </td>

                                @*Eliminar*@
                                <td class="text-center">
                                    <a href="/Cobro/Delete/@cobro.CobroId"><button type="button" class="btn bi bi-trash"></button></a>
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
            @*Footer*@
            <div class="card-footer">
                <p><strong>Cantidad de cobros: </strong>@ListaCobros.Count</p>
            </div>
        </div>
    </div>
</div>

@code {
    public List<Cobros> ListaCobros { get; set; } = new List<Cobros>();
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        ListaCobros = await cobroService.Listar(c => c.CobroId > 0);
    }

    private async Task Buscar()
    {
        if (ValorFiltro.Trim() != "")
        {
            if (Filtro == "CobroId" && int.TryParse(ValorFiltro, out int cobroId))
            {
                ListaCobros = await cobroService.Listar(c => c.CobroId == cobroId);

            }

            else if (Filtro == "Deudor")
            {
                ListaCobros = await cobroService.Listar(c => c.Deudores.Nombres.ToLower().Contains(ValorFiltro.ToLower()));
            }

        }
        else
        {
            ListaCobros = await cobroService.Listar(t => true);
        }
    }

    private async Task Restablecer()
    {
        ListaCobros = await cobroService.Listar(c => c.CobroId > 0);
        Filtro = string.Empty;
        ValorFiltro = string.Empty;
    }
}
